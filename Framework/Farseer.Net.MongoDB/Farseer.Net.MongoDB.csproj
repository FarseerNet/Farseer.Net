<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <Company>steden</Company>
        <Copyright>http://www.fsgit.com</Copyright>
        <Authors>steden</Authors>
        <AssemblyVersion>2.5.0</AssemblyVersion>
        <FileVersion>2.5.0</FileVersion>
        <Version>2.5.0</Version>
        <Product>MongoDB客户端</Product>
        <Description>包括：MongoDB</Description>
        <PackageTags>MongoDB</PackageTags>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <RootNamespace>FS.MongoDB</RootNamespace>
    </PropertyGroup>

    <PropertyGroup Condition="'$(TargetFramework)' == 'net461'">
        <DefineConstants>net461</DefineConstants>
    </PropertyGroup>
    <PropertyGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
        <DefineConstants>CORE</DefineConstants>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="MongoDB.Bson" Version="2.13.1"/>
        <PackageReference Include="MongoDB.Driver" Version="2.13.1"/>
        <PackageReference Include="MongoDB.Driver.Core" Version="2.13.1"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Farseer.Net\Farseer.Net.csproj"/>
    </ItemGroup>

</Project>